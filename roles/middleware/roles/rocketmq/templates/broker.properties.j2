brokerClusterName={{ rocketmq_cluster_name }}
{% if broker_type == 'm' %}
brokerName={{ rocketmq_broker_name_master }}
brokerId=0
listenPort=10911
brokerRole=ASYNC_MASTER
{% else %}
brokerName={{ rocketmq_broker_name_slave }}
brokerId=1
brokerRole=SLAVE
listenPort=10921
{% endif %}
namesrvAddr={{ rocketmq_nameserver_addr }}
storePathRootDir={{ rocketmq_store_root_path }}
storePathCommitLog={{ rocketmq_store_root_path }}/commitlog
storrPathConsumeQueue={{ rocketmq_store_root_path }}/consumequeue
storePathIndex={{ rocketmq_store_root_path }}/index
storeCheckpoint={{ rocketmq_store_root_path }}/checkpoint
abortFile={{ rocketmq_store_root_path }}/abort
deleteWhen=04
fileReservedTime=120
mapedFileSizeCommitLog=1073741824
mapedFileSizeConsumeQueue=500000
destroyMapedFileIntervalForcibly=120000
redeleteHangedFileInterval=120000
diskMaxUsedSpaceRatio=88
maxMessageSize=65536
flushCommitLogLeastPages=4
flushConsumeQueueLeastPages=2
flushCommitLogThoroughInterval=10000
flushConsumeQueueThoroughInterval=60000
flushDiskType=ASYNC_FLUSH
checkTransactionMessageEnable=false
sendMessageThreadPoolNums=128
pullMessageThreadPoolNums=128
